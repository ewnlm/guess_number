#!/usr/bin/perl -w
  use strict;
  use experimental 'smartmatch';
  my @golden;
  my ($iter, $AB);
  my (@prev_weight, @weight, @testing, @answer, @un_test, @tested, @unsuccessful);
  open FP, "golden.txt";
  while(<FP>) {
    chomp($_);
    push @golden, $_;
  }
  close FP;

  for my $goal(@golden) {
    @answer = 1..4;
    @testing = @answer;
    @prev_weight = (0,0);
    @un_test = grep {!($_~~ @answer)} 0..9;
    print "un test: @un_test\n";
    $iter = 0;
    $AB = &your_result($goal, join "", @answer);
    print "$AB, $iter\n";
    do {
      @weight = split /[A|B]/, $AB;
      my $toal_weight = $weight[0]+$weight[1];
      ### searching
      if($weight[0]>$weight[1]) { # More match and correct
	my $positively = $weight[0]-$prev_weight[0];
	if($positively>=0) {

	} else {

	}
      } else { # match but incorrect
      }
      @prev_weight = @weight;
      $AB = &your_result($goal, join "", @testing);

    } while($iter<3) # $weight[0]==4
  }



  sub your_result {
    my @ary_i = split //, shift @_;
    my @ary_j = split //, shift @_;
    my @a = map {$ary_i[$_]=~/$ary_j[$_]/} 0..$#ary_i;
    my @b = grep {$_ ~~ @ary_j} @ary_i;
    my $A = ($#a<0)?(0):($#a+1);
    my $B = ($#b<0)?(0):(abs($#b-$#a));
    $iter++;
    my $str = "$A"."A$B"."B";
  }
