#!/usr/bin/perl -w
  use strict;
  use experimental 'smartmatch';
  my @golden;
  my ($iter, $AB, $positively, $move, $currs, $prevs);
  my (@mask, @prev_weight, @weight, @testing, @answer);
  my (@un_test, @tested, @unsuccessful);
  my (%record, @probability);
  open FP, "golden.txt";
  while(<FP>) {
    chomp($_);
    push @golden, $_;
  }
  close FP;

  for my $goal(@golden) {
    @mask = (1, 1, 1, 1);
    @answer = qw/X X X X/;
    @testing = 1..4;
    @prev_weight = (0,0);
    $prevs = 0;
    %record = ();
    @un_test = grep {!($_~~ @testing)} 0..9;
    #print "un test: @un_test\n";
    $iter = 0;
    $AB = &your_result($goal, join "", @testing);
    print "@testing, ($AB, iter: $iter)\n";
    do {
      @weight = split /[A|B]/, $AB;
      $move = 4-$weight[0]-$weight[1];
      $currs = $weight[0]+$weight[1];
      map {push @{$record{$_}}, $testing[$_]} 0..$#testing;
      push @{$record{4}}, $currs;
      ### Processing @testing

      if($currs==0) {
	push @unsuccessful, @testing;
      }

      if($currs==1) {

      }

      if($currs==2 or $currs==3) {

      }

      if($currs==4) {
	@probability = ();
	push @probability, @testing;
      }

      ### filter
      my %seen = ();
      @unsuccessful = grep {!($seen{$_}++)} @unsuccessful;

      ###
      @prev_weight = @weight;
      $prevs = $currs;
      $AB = &your_result($goal, join "", @testing);
      print "@testing, ($AB, iter: $iter)\n";
    } while($iter<2); # $weight[0]==4

    for my $i(sort keys %record) {
      print "Record: $i, @{$record{$i}}\n";
    }

  }



  sub your_result {
    my @ary_i = split //, shift @_;
    my @ary_j = split //, shift @_;
    my @a = map {$ary_i[$_]=~/$ary_j[$_]/} 0..$#ary_i;
    my @b = grep {$_ ~~ @ary_j} @ary_i;
    my $A = ($#a<0)?(0):($#a+1);
    my $B = ($#b<0)?(0):(abs($#b-$#a));
    $iter++;
    my $str = "$A"."A$B"."B";
  }
